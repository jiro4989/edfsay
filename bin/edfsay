#!/bin/bash

# 名言: https://www2.atwiki.jp/edf41/pages/91.html
#       https://www65.atwiki.jp/edf5/pages/164.html
# チャット: https://www65.atwiki.jp/edf5/pages/148.html

readonly VERSION=v1.0.0

main() {
  echo 1
}

get_opts() {
  local opt_use_unko_color=false
  while (( 0 < $# )); do
    local opt=$1
    shift

    case "$opt" in
      '-h'|'--help')
        usage
        exit
        ;;

      '-v'|'--version')
        echo $VERSION
        exit
        ;;

      chat)
        ;;

      commlog)
        ;;

      *)
        opt_unko_level=$opt
        ;;
    esac
  done

  if [ "$opt_use_unko_color" = true ]; then
    opt_red=217
    opt_green=112
    opt_blue=2
  fi
}

## チャット定型文を返す。
say_chat() {

}

## 通信記録を返す。
say_commlog() {

}

usage() {
  cat << EOS
edfsay is command that EDF says a message.

Usage:
    edfsay [options]
    edfsay commlog [options]
    edfsay commlog [options] (2 | 3 | 4 | 5)
    edfsay chat [options]

Examples:
    edfsay
    edfsay commlog
    edfsay commlog 3
    edfsay commlog 4
    edfsay commlog 5
    edfsay broadcast
    edfsay chat yes
    edfsay chat angry

Options:
    -h, --help          このヘルプを出力する
    -v, --version       バージョン情報を出力する
    -r, --random        ランダムにセリフを発する
    -a, --all           全部出力する
        --sd            echo-sd
    -s, --scientist     サテキチ、スプキチ科学者のセリフ
EOS
}

main ${1+"$@"}
